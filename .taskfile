# make executable: $ chmod +x .taskfile
# make alias:
# - $ subl ~/.zshrc
# - add line: alias task="./.taskfile"
# run with $ task

function help {
  cat .taskfile | \
  sed 's/#: space/&\nfunction space {/g' | \
  grep -B1 -E '^[[:space:]]*([[:alnum:]_]+[[:space:]]*\(\)|function[[:space:]]+[[:alnum:]_]+)' | \
  sed '/function help {/d' | \
  sed -r 's/function //' | \
  sed -r 's/ \{/:/' | \
  grep -v -- -- | \
  sed '/^\s*$/d' | \
  sed 'N;s/\n/###/' | \
  sed -n 's/^#: \(.*\)###\(.*\):.*/\2###→ \1/p' | \
  column -t -s '###' | \
  sed 's/.*→ space.*//g'
}


#: update + check
function run {
  go mod tidy
  go vet
  gofmt -l .
  golangci-lint run
  staticcheck ./...
}

#: build the project
function build {
  rm -rf qw
  go build
}

#: move qw to /user/local/bin/qwx
function move {
  rm -rf qwx
  mv qw qwx
  sudo rm -rf /usr/local/bin/qwx
  sudo mv qwx /usr/local/bin/qwx
}

#: space

# ___ do not change ___
case $1 in
"") help ;;
*) "$@" ;;
esac
